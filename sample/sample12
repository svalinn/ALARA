## This problem defines multiple single-level and one multi-level pulse history, which are 
## applied in different configurations to the schedule blocks

geometry rectangular

volume
     10    zone_1
end

mat_loading
    zone_1    mix_1
end

mixture mix_1
    element fe 1 1.0
end

material_lib ../data/matlib.sample
element_lib ../data/elelib.std
data_library alaralib fendl2bin

output zone
        number_density
end

#     flux name    fluxin file   norm   shift   unused
flux  my_flux       ../examples/ref_flux_files/fluxfnsfIBfw_518MW.txt 1     0      default

schedule top_sched
    sch_1   once   0 s
    sch_2   once   0.5 y
    sch_3   once   7 d
    sch_4   once   0 s
end

schedule    sch_1
    1 c my_flux ph_1 0  s
end

schedule    sch_2
    30 w my_flux ph_2 0 s
end    

schedule    sch_3
    2 y  my_flux ph_3 8 d
    25 w my_flux ph_2 2 d
    sch_5        ph_3 100 s
end    

schedule    sch_4
    1 y     my_flux ph_1 1 h
    50 m    my_flux ph_2 1 h
    100 s   my_flux ph_3 10 h
    10 d    my_flux ph_4 1 w
end

schedule    sch_5
    30 d    my_flux ph_1 0 s
end    

pulsehistory  ph_1
    1    0.0    s
end

pulsehistory ph_2
    10   5.0     m
end

pulsehistory ph_3
    20  1.0     d
end  

pulsehistory  ph_4
    1   0.0    s
    5   5.0     m
    10  1.0     d
end

pulsehistory once
    1    0.0   s
end

#other parameters
truncation 1e-5
dump_file sample12_dump.file
